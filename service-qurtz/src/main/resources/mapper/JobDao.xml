<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.wlgroup.job.repository.JobDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.wlgroup.job.domain.JobDO" id="jobMap">
        <result property="id" column="id"/>
        <result property="beanName" column="bean_name"/>
        <result property="methodName" column="method_name"/>
        <result property="params" column="params"/>
        <result property="cronExpression" column="cron_expression"/>
        <result property="status" column="status"/>
        <result property="remark" column="remark"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

	<select id="get" resultMap="jobMap">
		SELECT
			*
		FROM
			t_job
		WHERE
			id = #{id}
	</select>

	<select id="list" resultMap="jobMap">
		SELECT
			*
		FROM
			t_job
		<where>
			<if test="beanName != null and beanName.trim() != ''">
				bean_name like concat('%', #{beanName}, '%')
			</if>
		</where>
		<choose>
            <when test="orders != null">
            	ORDER BY
            	<foreach collection="orders" item="item"  open=" " separator="," close=" ">
			    	${item.property} ${item.direction}
			    </foreach>
            </when>
			<otherwise>
                ORDER BY id ASC
			</otherwise>
        </choose>
	</select>

	<insert id="save" parameterType="com.wlgroup.job.domain.JobDO" useGeneratedKeys="true" keyProperty="id">
		INSERT INTO t_job
		(
			`id`,
			`bean_name`,
			`method_name`,
			`params`,
			`cron_expression`,
			`status`,
			`remark`,
			`create_time`
		)
		VALUES
		(
			#{id},
			#{beanName},
			#{methodName},
			#{params},
			#{cronExpression},
			#{status},
			#{remark},
			#{createTime}
		)
	</insert>

	<update id="update" parameterType="com.wlgroup.job.domain.JobDO">
		UPDATE t_job
		<set>
			<if test="beanName != null">`bean_name` = #{beanName}, </if>
			<if test="methodName != null">`method_name` = #{methodName}, </if>
			<if test="params != null">`params` = #{params}, </if>
			<if test="cronExpression != null">`cron_expression` = #{cronExpression}, </if>
			<if test="status != null">`status` = #{status}, </if>
			<if test="remark != null">`remark` = #{remark}, </if>
			<if test="createTime != null">`create_time` = #{createTime}</if>
		</set>
		WHERE id = #{id}
	</update>

	<delete id="delete">
		DELETE FROM
			t_job
		WHERE
			id = #{id}
	</delete>

</mapper>