<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.cheng.helper.repository.UserDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.cheng.helper.domain.UserDO" id="userMap">
        <result property="id" column="id"/>
        <result property="userName" column="user_name"/>
        <result property="password" column="password"/>
        <result property="phone" column="phone"/>
        <result property="delFlag" column="del_flag"/>
        <result property="createTime" column="create_time"/>
        <result property="validEndTime" column="valid_end_time"/>
        <result property="role" column="role"/>
    </resultMap>

	<select id="get" resultMap="userMap">
		SELECT 
			* 
		FROM 
			t_user 
		WHERE 
			id = #{id}
	</select>

	<select id="list" resultMap="userMap">
		SELECT 
			* 
		FROM 
			t_user
		<choose>
            <when test="orders != null">
            	ORDER BY 
            	<foreach collection="orders" item="item"  open=" " separator="," close=" ">  
			    	${item.property} ${item.direction}  
			    </foreach>  
            </when>
			<otherwise>
                ORDER BY id ASC
			</otherwise>
        </choose>
	</select>
	
	<insert id="save" parameterType="com.cheng.helper.domain.UserDO">
		INSERT INTO t_user
		(
			`id`, 
			`user_name`, 
			`password`, 
			`phone`, 
			`del_flag`, 
			`create_time`, 
			`valid_end_time`, 
			`role`
		)
		VALUES
		(
			#{id}, 
			#{userName}, 
			#{password}, 
			#{phone}, 
			#{delFlag}, 
			#{createTime}, 
			#{validEndTime}, 
			#{role}
		)
	</insert>
	 
	<update id="update" parameterType="com.cheng.helper.domain.UserDO">
		UPDATE t_user 
		<set>
			<if test="userName != null">`user_name` = #{userName}, </if>
			<if test="password != null">`password` = #{password}, </if>
			<if test="phone != null">`phone` = #{phone}, </if>
			<if test="delFlag != null">`del_flag` = #{delFlag}, </if>
			<if test="createTime != null">`create_time` = #{createTime}, </if>
			<if test="validEndTime != null">`valid_end_time` = #{validEndTime}, </if>
			<if test="role != null">`role` = #{role}</if>
		</set>
		WHERE id = #{id}
	</update>
	
	<delete id="delete">
		DELETE FROM 
			t_user 
		WHERE 
			id = #{id}
	</delete>
	<select id="findUserNames" resultMap="userMap">
		SELECT 
			* 
		FROM 
			t_user 
		WHERE 
			user_name= #{userName}
	</select>
	
	
</mapper>